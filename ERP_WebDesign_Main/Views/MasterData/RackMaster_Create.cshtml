@model ERP_WebDesign_Main.Models.MasterData_Model.RackMaster_Model

@{
    ViewBag.Title = "Rack Master Create";
}
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/MasterData_JS/controller.js"></script>
<script src="~/Scripts/MasterData_JS/factory.js"></script>
<h2>Rack Master Create</h2>


@using (Ajax.BeginForm("RackMaster_Create", "MasterData", FormMethod.Post, new AjaxOptions { OnSuccess = "ERP_JS_MAIN.OnSuccess", OnFailure = "ERP_JS_MAIN.OnFailure" }, new { objModel = Model }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" ng-controller="racks">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RackCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RackCode, new { htmlAttributes = new { @class = "form-control", @ng_model = "RC", @ng_blur = "IsExistCodeRacks()", @ng_keyup = "IsExistCodeRacks()" } })
                @Html.ValidationMessageFor(model => model.RackCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" ng-if="BtnDisable">
            <span class="control-label col-md-2"></span>
            <span class="col-md-10 text-danger" ng-bind="AlertMsg">
            </span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RackDisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RackDisplayName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RackDisplayName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" ng-disabled="BtnDisable" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "RackMaster_Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
