@using ERP_WebDesign_Main.Resources;
@model ERP_WebDesign_Main.Models.MasterData_Model.CodificationWrapper


@{
    ViewBag.Title = "List of codification";
}

<script src="~/Scripts/MasterData_JS/controller.js"></script>
<script src="~/Scripts/MasterData_JS/factory.js"></script>
<h2>List of codification</h2>

<p>
    @Html.ActionLink("Create New", "CodificationMaster_Create")
</p>
<div ng-controller="codification" ng-init="BindCodificationForIndex(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.CodiFilterItems))">
    <div class="container">
        <div class="row">
            <div id="filter-panel" class="filter-panel">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div role="form" class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <div class="help">@ERP_WebDesign_MasterModelResource.CODI_GROUP</div>
                                    <select class="form-control" ng-model="CodiFilterItems.GroupID" ng-change="GetItems('@Url.Action("PopulateCodiItems", "MasterData")')" ng-disabled="DisableAllDropdown">
                                        <option ng-repeat="row in CodiFilterItems.Groups" value="{{row.Value}}">{{row.DisplayText}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <div class="help">@ERP_WebDesign_MasterModelResource.CODI_ITEM</div>
                                    <select class="form-control" ng-model="CodiFilterItems.ItemID" ng-change="GetSpecs('@Url.Action("PopulateCodiSpecs", "MasterData")')" ng-disabled="DisableAllDropdown">
                                        <option ng-repeat="row in CodiFilterItems.Items" value="{{row.Value}}">{{row.DisplayText}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <div class="help">@ERP_WebDesign_MasterModelResource.CODI_SPEC</div>
                                    <select class="form-control" ng-model="CodiFilterItems.SpecificationID" ng-disabled="DisableAllDropdown">
                                        <option ng-repeat="row in CodiFilterItems.Specifications" value="{{row.Value}}">{{row.DisplayText}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <div class="help">@ERP_WebDesign_MasterModelResource.CODI_RACK</div>
                                    <select class="form-control" ng-model="CodiFilterItems.RackID" ng-disabled="DisableAllDropdown">
                                        <option ng-repeat="row in CodiFilterItems.Racks" value="{{row.Value}}">{{row.DisplayText}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <div class="help">Codification code</div>
                                    <input type="text" class="form-control" data-toggle="tooltip" data-placement="top" title="Group-Item-Specification-Rack" id="searchText" ng-model="SearchText" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 btn-searchbtn-codification">
                                    <button type="button" ng-click="Search('@Url.Action("CodificationMaster_Search", "MasterData")')" class="btn btn-primary" data-target="#filter-panel">
                                        Search
                                    </button>
                                    <button type="button" ng-click="ClearAll('@Url.Action("CodificationMaster_Search", "MasterData")')" class="btn btn-primary" data-target="#filter-panel">
                                        Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="codiCollectionSearchGrid">
        @{
            @Html.Partial("_CodificationSearchGrid", Model.Codi);

        }
    </div>

</div>



